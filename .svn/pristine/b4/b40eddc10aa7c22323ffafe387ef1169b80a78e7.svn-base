package buddychallenge.entities;

import buddychallenge.util.Category;

public class Report {
	private static int id;
	private int reportID;
	private String reason;
	private Category category;
	private Post post;
	private User user;
	
	public Report(String reason, Category category, Post post, User user) {
		reportID = id++;
		this.reason = reason;
		this.category = category;
		this.post = post;
		this.user = user;
	}
	
	public Report(){
		reportID = id++;
	}

	public int getReportID() {
		return reportID;
	}

	public String getReason() {
		return reason;
	}

	public void setReason(String reason) {
		this.reason = reason;
	}

	public Category getCategory() {
		return category;
	}

	public void setCategory(Category category) {
		this.category = category;
	}

	public Post getPost() {
		return post;
	}

	public void setPost(Post post) {
		this.post = post;
	}

	public User getUser() {
		return user;
	}

	public void setUser(User user) {
		this.user = user;
	}
	
	@Override
	public String toString(){
		return String.format("Category: %s/nReason: %s/n Post: %s", this.category.toString(), this.reason, this.post.getText());
	}
	
}
